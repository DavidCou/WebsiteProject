<!DOCTYPE html>
<html>
<head>
    <title>Add a Vehicle</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
    <header>
        <nav id="nav_menu">
            <ul>
                <li>Sell Your Vehicle Now!</li>
                <li><a href="/Assignment3/views/index.ejs">Home</a></li>
                <li><a href="/Assignment3/views/enteredVehicles.ejs">List of Entered Vehicles</a></li>
            </ul>
        </nav>
    </header>
    <h1>Enter Information</h1>
    <form method="post" action="/Assignment3/views/addVehicle.ejs">
        <h3>Seller's Information</h3>
        <label for = "firstName">First Name:</label>
        <input type="text" name="firstName"><br><br>
        <label for = "lastName">Last Name:</label>
        <input type="text" name="lastName"><br><br>
        <label for = "address">Address:</label>
        <input type="text" name="address"><br><br>
        <label for = "city">City:</label>
        <input type="text" name="city"><br><br>
        <label for = "province">Province:</label>
        <input type="text" placeholder="AA" name="province"><br><br>
        <label for = "postalCode">Postal Code:</label>
        <input type="text" name="postalCode"><br><br>
        <label for = "email">Email:</label>
        <input type="text" name="email"><br><br>
        <label for = "phoneNumber">Phone number:</label>
        <input type="text" name="phoneNumber"><br><br>
        <h3>Vehicle's Information</h3>
        <label for = "make">Make:</label>
        <input type="text" name="make"><br><br>
        <label for = "model">Model:</label>
        <input type="text" name="model"><br><br>
        <label for = "year">Year:</label>
        <input type="text" name="year"><br><br>
        <input type="submit" value="Submit" id = button>
    </form>

    <% if(typeof errors !== 'undefined'){
        for(var error of errors){
        %>
            <h3><%= error.msg %></h3>
        <%
        }
    }
    %>
    
</body>
<footer>
    
</footer>
</html>